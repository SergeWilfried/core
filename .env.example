# Application
APP_NAME=BaaS Core Banking
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# Formance Configuration
FORMANCE_BASE_URL=https://api.formance.cloud
FORMANCE_CLIENT_ID=your_client_id_here
FORMANCE_CLIENT_SECRET=your_client_secret_here
FORMANCE_ORGANIZATION_ID=your_org_id_here
FORMANCE_STACK_ID=your_stack_id_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (Optional - for local storage)
DATABASE_URL=postgresql://user:password@localhost:5432/banking
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=false
